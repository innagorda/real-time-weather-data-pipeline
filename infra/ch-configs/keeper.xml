<clickhouse>
    <listen_host>0.0.0.0</listen_host>
    <keeper_server>
        <tcp_port>2181</tcp_port>
        <server_id>1</server_id>
        <log_storage_path>/var/lib/clickhouse-keeper/log</log_storage_path>
        <snapshot_storage_path>/var/lib/clickhouse-keeper/snapshots</snapshot_storage_path>

        <coordination_settings>
            <operation_timeout_ms>10000</operation_timeout_ms>
            <session_timeout_ms>30000</session_timeout_ms>
            <raft_logs_level>trace</raft_logs_level>
        </coordination_settings>

        <raft_configuration>
            <server>
                <id>1</id>
                <hostname>clickhouse-keeper</hostname>
                <port>9234</port>
            </server>
        </raft_configuration>

        <four_letter_word_enabled>true</four_letter_word_enabled>
    </keeper_server>

    <logger>
        <level>information</level>
        <log>/var/log/clickhouse-server/clickhouse-keeper.log</log>
        <error_log>/var/log/clickhouse-server/clickhouse-keeper.err.log</error_log>
    </logger>
</clickhouse>
